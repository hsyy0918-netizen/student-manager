<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jxd.stuManger.dao.IUserLoginDao">
    <sql id="BaseCol">
        user_id, username, password, role
    </sql>

    <insert id="insertUserLogin" parameterType="userLogin">
        insert into userlogin (user_id, username, password, role) values (#{userId},#{userName},#{password},#{role})
    </insert>

    <select id="selectByUserName" resultType="com.jxd.stuManger.model.UserLogin">
        select user_id,username,password,role from userlogin where username = #{useName}
    </select>

    <delete id="deleteUserLoginByUsername">
        delete from userlogin where username = #{userName}
    </delete>


    <update id="updatePassword">
        update userlogin set password = #{newPassword}
        where username = #{username}
    </update>

    <select id="selectUserByUsername" resultType="com.jxd.stuManger.model.UserLogin">
        select <include refid="BaseCol"></include> from userlogin
                where username = #{username}
    </select>

    <delete id="deleteUserLogin">
        delete from userlogin where username = #{userName}
    </delete>
</mapper>